@model Pbl3Context.User

@using PBL3.Models

@{
    ViewBag.Title = "Sign_up";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SignUp_Errors Errors = ViewBag.SignUp_Check;
}

<h2>Sign_up</h2>

<script src="~/Scripts/JS/JavaScript.js" type="text/javascript"></script>
@using (Html.BeginForm("Sign_up", "Login"))
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <div style="color:red"> @Errors.Name</div>
    <br>
    @Html.LabelFor(model => model.Sex)
    @Html.DropDownListFor(model => model.Sex, new List<SelectListItem>    {
        new SelectListItem{Text="Nam" , Value="NAM"},
        new SelectListItem{Text="Nữ" , Value="NU"} },
                    "Chọn giới tính")
    <div style="color:red">@Errors.Sex</div>
    <br>
    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone, new { type = "number", min = 1 })
    <div style="color:red"> @Errors.Phone</div>
    <br>
    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address)
    <div style="color:red">@Errors.Address</div>
    <br>
    @Html.LabelFor(model => model.Username)
    @Html.TextBoxFor(model => model.Username)
    <div style="color:red">@Errors.Username</div>
    <br>
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, new { id = "email", onkeyup = "Check('email');" })
    <div id="LackCharacter" style="color:red"></div>
    <div style="color:red">@Errors.Email</div>
    <br>
    @Html.LabelFor(model => model.Password)
    @Html.PasswordFor(model => model.Password, new { id = "password" })
    <div style="color:red">@Errors.Password</div>
    <br>
    <label for="cfpass">Confirm password:</label>
    <input type="password" id="cfpass" name="cfpass" />
    <div style="color:red">@Errors.Cfpassword</div>
    <div style="color:red">@Errors.result</div>
    <input type="submit" value="Sign up" />
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>