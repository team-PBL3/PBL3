@model PBL3.Models.User
@using PBL3.Models

@{ ViewBag.Title = "Quên mật khẩu";
                Layout = "~/Views/Shared/_LayoutSignUp.cshtml"; }
<div class="title">Nhập lại thông tin cá nhân</div>

@using (Html.BeginForm("ForgetPwd", "Login", FormMethod.Post,new {style="margin-top: 30px" }))
{
<div class="user-details1" style="justify-content: space-between;">
    <div class="input-box">
        <span class="details">Họ tên</span>
        @Html.TextBoxFor(model => model.name, new { placeholder = "Enter your name" })
        <br />
        @Html.ValidationMessageFor(model => model.name)
    </div>
    <div class="input-box">
        <span class="details">Email</span>
        @Html.TextBoxFor(model => model.email, new { placeholder = "Enter your email" })
        <br />
        @Html.ValidationMessageFor(model => model.email)
    </div>
</div>
<div class="user-details2">
    <div class="input-box">
        <span class="details">Số điện thoại</span>
        @Html.TextBoxFor(model => model.phone, new { type = "number", min = 1, placeholder = "Enter your number" })
        <br />
        @Html.ValidationMessageFor(model => model.phone)
    </div>
    <div class="input-box">
        <span class="details">Tên tài khoản</span>
        @Html.TextBoxFor(model => model.username, new { placeholder = "Enter your username" })
        <br />
        @Html.ValidationMessageFor(model => model.username)
    </div>
</div>
    <div style="text-align:center">
        <span style="color:red">@ViewBag.Error</span>
    </div>
<div class="button" style="margin:45px 0px 20px 0px">
    <input type="submit" value="Tìm lại mật khẩu">
</div>}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>