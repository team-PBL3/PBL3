@model PBL3.Models.Account_Sign_in
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
}

<h1>Đăng nhập</h1>
@using (Html.BeginForm("Sign_in", "Login", FormMethod.Post))
{
    <span style="color: red;">@ViewBag.SignIn</span>
    <div class="txt_field">
        <input type="text" id="email" name="email" required>
        <span></span>
        <label>Username</label>
    </div>
    <div class="txt_field">
        <input type="password" id="password" name="password" required>
        <span></span>
        <label>Mật khẩu</label>
    </div>
    <div class="pass"><a style="text-decoration:none; color: #808080" href="/Login/ForgetPwd">Quên mật khẩu?</a></div>
    <input type="submit" value="Đăng nhập">
    <div class="signup_link">
        <a href="/Home/Index" class="btn-back">
            <i class="fa-solid fa-left-long"></i>
        </a>
        <span>Chưa có tài khoản? @Html.ActionLink("Đăng ký", "Sign_up", "Login")</span>
    </div>
}


