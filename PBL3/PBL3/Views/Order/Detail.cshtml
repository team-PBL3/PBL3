@model PBL3.Models.Orderr
    @using PBL3.Models
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Home -->

<link href="~/Content/Web/cart.css" rel="stylesheet" />
<link href="~/Content/Web/Order.css" rel="stylesheet" />
<div class="home" style="height:600px">
    <div class="home_container">
        <div class="home_background" style="background-image:url('/Image/Cart_poster.jpg');background-size:contain"></div>
        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content">
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="/Member/">Trang cá nhân</a></li>
                                    <li>Đơn hàng</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="poster">
    <img src="~/Image/post1.gif"/>
</div>
<div class="list_order">
    <div style="padding: 30px">
        <div style="color:black;">
            <div style="padding: 10px; background: white;">
                <div class="OrderCode">Đơn hàng: @Encrypt.ToEncrypt("000" + Model.id)</div>
            </div>
            @foreach (var item in Model.orderdetails)
            {
            <div class="FrameOrder">
                 <div class="OrderContent">
                        @foreach (var y in item.product.images)
                        {
                        <img class="Order_image" src="@(Image_Url.urlImage + y.name)">
                        }
                    <div class="Info2Order">
                        <div>
                            <span>@item.product.name</span>
                        </div>
                        <div>Nhãn: @item.product.trademark.name</div>
                        <div>Giá: @item.product.price</div>
                        <div>Số lượng: @item.quantity</div>
                        <div>Thành tiền: @item.price</div>
                    </div>
                 </div>
            </div>
            }
            <div class="FrameOrder">
                 <div class="OrderContent">
                     <div>
                         <div>Số sản phẩm: @Model.orderdetails.Count</div>
                         <div>Trạng thái: @Model.status</div>
                         <div>Thời gian xác nhận: @Model.TimeConfirm</div>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</div>
<div class="poster"></div>
<script src="~/Scripts/Thien_JS/Order_Index.js"></script>
