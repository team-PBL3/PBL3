@model PBL3.Models.List_ProductView
@using PBL3.Models;
@{ ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    PBL3DataContext dataContext = new PBL3DataContext();
    List_CustomerView list2 = ViewBag.ShowCustomer;
    User a = (User)Session[PBL3.Controllers.RouteController.Account_Session]; }
@{ List_ProductView list = Model;}

<div class="main-content">
    <header>
        <h2>
            <label for="nav-toggle">
                <span class="fa-solid fa-bars"></span>
            </label>
            @ViewBag.Title
        </h2>

        <div class="search-wrapper">
            <span class="fa-solid fa-magnifying-glass"></span>
            <input type="search" placeholder="Search here" />
        </div>

        <div class="user-wrapper">
            <img src="~/Theme/images/profile.png" alt="" width="30px" height="30px">
            <div>
                <li><a href="#">@a.name</a></li>
                <small>Admin</small>
            </div>
        </div>
    </header>

    <main>
        <div class="cards">
            <div class="card-single">
                <div>
                    <h1>@list2.data_views.Count</h1>
                    <span>Members</span>
                </div>
                <div>
                    <span class="fa-solid fa-users"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <h1>@list.data_views.Count</h1>
                    <span>Products</span>
                </div>
                <div>
                    <span class="fa-solid fa-cart-shopping"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <h1>200</h1>
                    <span>Order</span>
                </div>
                <div>
                    <span class="fa-solid fa-bag-shopping"></span>
                </div>
            </div>


        </div>

        <div class="recent-grid_4">
            <div class="projects_4">
                <div class="card_4">
                    <div class="card-header_4">
                        <h3>Products</h3>

                        <button>
                            See all <span class="fa-solid fa-arrow-right">
                            </span>
                        </button>
                    </div>

                    <div class="card-body_4">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered mydatatable" id="table" style="width: 100%"
                                   data-toggle="table"
                                   data-id-table="advancedTable">
                                <thead>
                                    <tr>
                                        <th data-field="product">Product</th>
                                        <th data-field="category">Category</th>
                                        <th data-field="trademark">Trademark</th>
                                        <th data-field="status">Status</th>
                                        <th data-field="quantity">Quantity</th>
                                        <th data-field="price">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in list.data_views)
                                    {
                        <tr>

                            <td>@i.name</td>
                            <td>@i.category</td>
                            <td>@i.trademark</td>
                            <td>
                                <span class="status_orange">@i.status</span>
                            </td>
                            <td>@i.quantityRemain</td>
                            <td>@i.Price</td>
                        </tr>}
                                    @*<tr>
                                            <td>Product</td>
                                            <td>Category</td>
                                            <td>Dior</td>
                                            <td>
                                                <span class="status_orange">INACTIVE</span>
                                            </td>
                                            <td>10</td>
                                            <td>1000000</td>
                                        </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
</div>
<script>var i = document.getElementsByClassName("status_orange");
    for (var element of i) {
        if (element.innerHTML == "SOLD_OUT") element.className ="status_purple";
    }</script>