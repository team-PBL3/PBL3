@model PBL3.Models.Product
@using PBL3.Models;
@{ ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    PBL3DataContext dataContext = new PBL3DataContext();

    User a = (User)Session[PBL3.Controllers.RouteController.Account_Session]; 
}
@{ 
    List_ProductView list = ViewBag.ShowProduct;
}
<div class="main-content">
    <div class="Action-page-name" style="display:none">Product</div>
    <header>
        <h2>
            <label for="nav-toggle">
                <span class="fa-solid fa-bars"></span>
            </label>
            @ViewBag.Title
        </h2>

        <div class="search-wrapper">
            <span class="fa-solid fa-magnifying-glass"></span>
            <input type="search" placeholder="Tìm kiếm" />
        </div>

        <div class="user-wrapper" onclick="menuToggle();">
            <img src="~/Theme/images/profile.png" alt="" width="30px" height="30px">
            <div>
                <h4>@a.name</h4>
                <small>Admin</small>
            </div>
            <div class="menu">
                <ul>
                    <li><span class="fa-solid fa-arrow-right-from-bracket"></span><a href="~/AdminHome/Logout">Log out</a></li>
                </ul>
            </div>
        </div>
    </header>

    <main>
        <div class="button">
            <input type="submit" value="Thêm sản phẩm" id="btn-add">
        </div>

        <div class="recent-grid_4">
            <div class="projects_4">
                <div class="card_4">
                    <div class="card-header_4">
                        <h3>Sản phẩm</h3>

                        <a href="~/AdminHome/TableDetail" id="btn-see-all">
                            Xem tất cả <span class="fa-solid fa-arrow-right">
                            </span>
                        </a>
                    </div>

                    <div class="card-body_4">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered mydatatable" id="table" style="width: 100%"
                                   data-toggle="table"
                                   data-id-table="advancedTable">
                                <thead>
                                    <tr>
                                        <th data-field="product">Product</th>
                                        <th data-field="category">Category</th>
                                        <th data-field="trademark">Trademark</th>
                                        <th data-field="status">Status</th>
                                        <th data-field="quantity">Quantity</th>
                                        <th data-field="price">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in list.data_views)
                                    {
                                        <tr>
                                            <td>@i.name</td>
                                            <td>@i.category</td>
                                            <td>@i.trademark</td>
                                            <td>
                                                <span class="status_orange">@i.status</span>
                                            </td>
                                            <td>@i.quantityRemain</td>
                                            <td>@i.Price</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
</div>
<div class="bg-modal">
    <div class="cards-bg-modal">
        <div class="close">+</div>
        <div class="title">Thêm sản phẩm</div>
        <div class="add-form">
            <form action="/AdminHome/addProduct" method="post">
                <div class="product-details">
                    <div class="input-box">
                        <span class="details">Tên sản phẩm</span>

                        @Html.TextBoxFor(model => model.name, new { placeholder = "Nhập tên sản phẩm", @class = "input" })
                    </div>
                    <div class="input-box">
                        <span class="details">Thể loại</span>
                        <div class="search_select_box">
                            @Html.DropDownListFor(model => model.categoryid, new SelectList(dataContext.Categories.ToList(), "id", "name"), "Chọn thể loại")
                        </div>
                    </div>
                    <div class="input-box">
                        <span class="details">Thương hiệu</span>
                        <div class="search_select_box">
                            @Html.DropDownListFor(model => model.trademarkid, new SelectList(dataContext.TradeMarks.ToList(), "id", "name"), "Chọn thương hiệu")
                        </div>
                    </div>
                    <div class="input-box">
                        <span class="details">Mô tả</span>
                        @Html.TextBoxFor(model => model.description, new { placeholder = "Nhập mô tả sản phẩm", @class = "input" })
                    </div>
                    <div class="input-box">
                        <span class="details">Giá</span>
                        @Html.TextBoxFor(model => model.price, new { placeholder = "Nhập giá", @class = "input" })
                    </div>
                    <div class="input-box">
                        <span class="details">Trạng thái</span>
                        <select class="options" data-live-search="true" style="width: 89%; height: 40px;border-radius: 8px; padding-left: 15px;">
                            <option>SOLD_OUT</option>
                            <option>ACTIVE</option>
                        </select>

                    </div>
                    <div class="input-box">
                        <span class="details">Số lượng còn lại</span>
                        <input class = "input" type="text" placeholder="Nhập số lượng còn lại" required style=" margin-left: 0px;">
                    </div>
                    <div class="input-box">
                        <span class="details">URL ảnh</span>
                        <input class = "input" type="file" id="myfile" name="imagee" style=" padding-top: 7px; margin-left: 0px;"><br><br>
                    </div>
                    <div class="input-box">
                        <span class="details">Thông tin sản phẩm</span>
                        <textarea id="productinfo" type="text" rows="4" placeholder="Nhập thông tin sản phẩm" required name="infoproduct"></textarea>

                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Thêm sản phẩm">
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var i = document.getElementsByClassName("status_orange");
    for (var element of i) {
        if (element.innerHTML == "SOLD_OUT") element.className = "status_purple";
    }
</script>
<script>
    document.getElementById('btn-add').addEventListener('click', function () {
        document.querySelector('.bg-modal').style.display = 'flex';
    });

    document.querySelector('.close').addEventListener('click', function () {
        document.querySelector('.bg-modal').style.display = 'none';
    });
</script>