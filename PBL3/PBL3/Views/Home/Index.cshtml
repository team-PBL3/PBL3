@using PBL3.Models;
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List_ProductView list = Model;
}
<link type="text/css" href="~/Content/Web/Home.css" rel="stylesheet" />
<div style="text-align: center">
    @foreach (var item in list.data_views)
    {
        <div class="product-display-frame">
            <a href="https://localhost:44325/Product/?name=@item.name&productid=@item.id">
                <img src="@item.imageName" />
                <div>@item.name</div>
            </a>
            <div>@item.Price.ToString()</div>
        </div>
    }
</div>
<br />
<div class="Page-buttons">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <button name="id" id="First-Page" class="page-button" value="1">First</button>
        <button name="id" class="Previous-Page" value="@(list.CurrentPage-1)"><</button>
        <span id="Three-dot1" class="page-button">...</span>
        <button name="id" class="Previous-Page" value="@(list.CurrentPage-1)">@(list.CurrentPage-1)</button>
        <label id="Current-Page" class="page-button">@(list.CurrentPage)</label>
        <button name="id" class="Next-Page" value="@(list.CurrentPage+1)">@(list.CurrentPage+1)</button>
        <span id="Three-dot2" class="page-button">...</span>
        <button name="id" class="Next-Page" value="@(list.CurrentPage+1)">></button>
        <button name="id" id="Last-Page" class="page-button" value="@(list.AvalMaxPage)">Last</button>
    }
</div>

<script type="text/javascript" src="~/Scripts/Thien_JS/Home_Index.js"></script>